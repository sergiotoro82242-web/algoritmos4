#invertir un string usando recursividad
#hola -> aloh

def invertir_string(s):
    if len(s) <= 0:
        return s
    return invertir_string(s[1:]) + s[0]

# Ejemplo de uso
cadena = "hola"
cadena_invertida = invertir_string(cadena)
print(f"Cadena original: {cadena}")
print(f"Cadena invertida: {cadena_invertida}")



def es_palindromo(s):
    if len(s) <= 1:
        return True
    
    if s[0] != s[-1]:
        return False
    
    return es_palindromo(s[1:-1])


palabra = "reconocer"
resultado = es_palindromo(palabra)

print(f"Palabra: {palabra}")
print(f"¿Es palíndromo?: {resultado}")


#Verificar si un string es palíndromo usando recursividad
# Ignorando espacios y mayúsculas/minúsculas

def es_palindromo(s):
    # Normalizamos: quitamos espacios y pasamos a minúsculas
    s = s.replace(" ", "").lower()
    
    # Caso base
    if len(s) <= 1:
        return True
    
    # Si el primer y último carácter no coinciden
    if s[0] != s[-1]:
        return False
    
    # Llamada recursiva
    return es_palindromo(s[1:-1])


# Ejemplo de uso
texto = "Anita lava la tina"
resultado = es_palindromo(texto)

print(f"Texto: {texto}")
print(f"¿Es palíndromo?: {resultado}")


#contar cuantas veces se repite un caracter de un texto
def contar(s, c ):
    if len(s) == 0:
        return 0
    cuenta = 1 if s[0] == c else 0
    return cuenta + contar(s[1:], c)

print(contar("holaaaaaaa","a"))

#contar cuantos nodos hay en una lista
class Nodo:
    def __init__(self, dato):
        self.dato = dato
        self.siguiente = None


class Lista:
    def __init__(self):
        self.cabeza = None

    def agregar(self, dato):
        nodo = Nodo(dato)

        if self.cabeza is None:
            self.cabeza = nodo
        else:
            actual = self.cabeza
            while actual.siguiente:
                actual = actual.siguiente
            actual.siguiente = nodo

    def __len__(self):
        return self.contar(self.cabeza)

    def contar(self, nodo):
        if nodo is None:
            return 0
        return 1 + self.contar(nodo.siguiente)


lista = Lista()
lista.agregar(10)
lista.agregar(20)
lista.agregar(30)

print("Cantidad de nodos:", lista.contar())


